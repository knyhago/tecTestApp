@model IEnumerable<UserManagement.Data.Entities.Log>

@{
    ViewData["Title"] = "Application Logs";
}

<h2 class="mb-3">Application Logs</h2>

<div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            @* <th>Id</th>
            <th>User Id</th> *@
            <th>Action</th>
            <th>Details</th>
            @* <th>Performed By</th>
            <th>Timestamp</th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model.OrderByDescending(l => l.Timestamp))
    {
        <tr>
            @* <td>@log.Id</td>
            <td>@log.UserId</td> *@
            <td>@log.Action</td>
            <td>@log.Details</td>
            @* <td>@log.PerformedBy</td>
            <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td> *@
            <td>
                <a asp-action="LogView" asp-route-id="@log.Id" class="btn btn-sm btn-info">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>

 <div>
     <a asp-action="List"  class="btn btn-sm btn-secondary">Back</a>

 </div>
 </div>
