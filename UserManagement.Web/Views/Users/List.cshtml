@* @model UserManagement.Contracts.Models.Users.UserListViewModel *@
@model List<UserManagement.Contracts.DTOS.UserDto>

<h2>User List</h2>

<div class="d-flex justify-content-start gap-2 mb-3">
    <a asp-controller="Users" asp-action="AddEditUserForm" class="btn btn-primary">
        Add User
    </a>

    <a asp-controller="Log" asp-action="ViewAllLogs" asp-route-page="1" class="btn btn-secondary">
    All Logs
</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Forename</th>
                <th>Surname</th>
                <th>D.O.B</th>
                <th>Email</th>
                <th>Account Active</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Forename
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.DateOfBirth
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @(item.IsActive ? "Yes" : "No")
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="btnToggleActions">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                                <li><a class="dropdown-item" asp-controller="Log" asp-action="ViewLogs" asp-route-id="@item.Id">View</a></li>
                                <li><a class="dropdown-item" asp-action="AddEditUserForm" asp-route-id="@item.Id">Edit</a></li>
                                <li><a class="dropdown-item" asp-action="DeleteUser" asp-route-id="@item.Id" >Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <div class="btn-group" role="group">
        <a asp-controller="Users" asp-action="List" class="btn btn-default">Show All</a>
        <a asp-controller="Users" asp-action="FilterList" asp-route-isActive="true"
        class="btn btn-default">Active Only</a>
        <a asp-controller="Users" asp-action="FilterList" asp-route-isActive="false" 
        class="btn btn-default">Non Active</a>

    </div>
    
</div>

