@using UserManagement.Data.Entities

@page "/allLogs"
@inject HttpClient Http


<h3>AllLogs</h3>

@if (logs is null)
{
    <p><em>Loading...</em></p>
}
else if (!logs.Any())
{
    <p><em>No logs found for this user.</em></p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Action</th>
                <th>Details</th>
                <th>Performed By</th>
                <th>Timestamp</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in logs.OrderByDescending(l => l.Timestamp))
            {
                <tr>
                    <td>@log.Action</td>
                    <td>@log.Details</td>
                    <td>@log.PerformedBy</td>
                    <td>@log.Timestamp</td>
                    <td> <a type="button" class="btn btn-primary"href="@($"/logDetails/{log.Id}")">Details</a></td>
    
                </tr>
            }
        </tbody>
        <tfoot>
            <a type="button" class="btn btn-primary"href="/userList">Back</a>
        </tfoot>
    </table>

}

@code {
     private List<Log>? logs;

    protected override async Task OnInitializedAsync()
    {
        logs= await Http.GetFromJsonAsync<List<Log>>($"https://localhost:7084/api/logs");
    }

    

}
